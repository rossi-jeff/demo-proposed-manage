{
  "name": "demo-proposed-manage",
  "version": "1.0.0",
  "description": "proposed schema and federation for manage",
  "main": "gateway/gateway.ts",
  "scripts": {
    "test": "jest",
    "migrate:admin": "cd services/admin/ && npx prisma migrate dev",
    "migrate:school": "cd services/school/ && npx prisma migrate dev",
    "migrate:activity": "cd services/activity/ && npx prisma migrate dev",
    "codegen:admin": "graphql-codegen --config codegen-admin.yml",
    "codegen:activity": "graphql-codegen --config codegen-activity.yml",
    "codegen:school": "graphql-codegen --config codegen-school.yml",
    "codegen": "concurrently npm:codegen:*",
    "generate:admin": "cd services/admin/ && npx prisma generate",
    "generate:activity": "cd services/activity/ && npx prisma generate",
    "generate:school": "cd services/school/ && npx prisma generate",
    "generate": "concurrently npm:generate:*",
    "start:service:activity": "nodemon services/activity/src/server.ts",
    "start:service:admin": "nodemon services/admin/src/server.ts",
    "start:service:school": "nodemon services/school/src/server.ts",
    "start:services": "concurrently npm:start:service:*",
    "start:gateway": "nodemon gateway/gateway.ts",
    "format": "prettier --write \"./gateway/*.{ts,tsx}\" \"./services/*/src/**/*.{ts,tsx,json,graphql}\" \"./utils/*.{ts,tsx}\"",
    "lint": "eslint \"./services/*/src/*\" \"./utils/*\" \"./gateway/*\"  --fix --ext .js,.jsx,.ts,.tsx",
    "seed": "ts-node ./utils/seed.ts",
    "prepare": "husky install"
  },
  "author": "Jeff Rossi",
  "license": "ISC",
  "dependencies": {
    "@apollo/federation": "^0.36.1",
    "@apollo/gateway": "^2.1.1",
    "@graphql-tools/load-files": "^6.6.1",
    "@prisma/client": "^4.3.1",
    "apollo-server": "^3.10.2",
    "apollo-server-core": "^3.10.2",
    "graphql": "^16.6.0",
    "ts-node": "^10.9.1",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.12.0",
    "@graphql-codegen/typescript": "2.7.3",
    "@graphql-codegen/typescript-resolvers": "2.7.3",
    "@ngneat/falso": "^6.1.0",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "concurrently": "^7.4.0",
    "eslint": "^8.23.1",
    "eslint-config-xo": "^0.42.0",
    "eslint-config-xo-typescript": "^0.53.0",
    "husky": "^8.0.0",
    "jest": "^29.0.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "sinon": "^14.0.0",
    "typescript": "^4.8.3"
  }
}
